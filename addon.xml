<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.sf-videoportal"
       name="SF Videoportal"
       version="0.4.0"
       provider-name="Andreas Wetzel [xbmc@mindmade.org]">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
	<import addon="script.module.simplejson" version="2.0.10"/>
	<import addon="script.module.beautifulsoup" version="3.0.8"/>
	<import addon="script.module.addonstats" version="0.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="videoportal.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>SF Videoportal</summary>
    <description>
        This plug-in allows access to the content of the SF Videoportal (http://videoportal.sf.tv/).
        Many of the productions in German of the Swiss national TV station are available.
    </description>
  </extension>
</addon>
